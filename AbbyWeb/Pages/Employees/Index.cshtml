@page
@model AbbyWeb.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "List of employees";
}
<style>
    th {
        white-space: nowrap;
    }
</style>

<div class="container">
    <div class="row">
        <div class="border" style="padding:30px;">
            <div class="row">
                <div class="col-9">
                    <h5 class="text-success">
                        <i class="bi bi-card-list"></i>&nbsp;List of employees
                    </h5>
                </div>
                @if (Model.Employees.Any())
                {
                    <div class="col-3">
                        <a class="btn btn-success form-control" asp-page="upsert">
                            <i class="bi bi-plus-square"></i>&nbsp;Create new employee
                        </a>
                    </div>
                }
            </div>
            <hr />
            @if (Model.Employees.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" style="width:100%;" id="employees">
                        <thead class="bg-success">
                            <tr>
                                <th>Fullname</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Address</th>
                                <th>Telephone</th>
                                <th>Salary</th>
                                <th>Dob</th>
                                <th>Gender</th>
                                <th>Occupation</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var obj in Model.Employees)
                                {
                                    <tr>
                                        <td>
                                            @obj.FullName
                                        </td>
                                        <td>
                                            @obj.FirstName
                                        </td>
                                        <td>
                                            @obj.LastName
                                        </td>
                                        <td>
                                            @obj.Address
                                        </td>
                                        <td>
                                            @obj.Telephone
                                        </td>
                                        <td>
                                            @obj.Salary.Value.ToString("c")
                                        </td>
                                        <td>
                                            @obj.Dob.Value.ToShortDateString()
                                        </td>
                                        <td>
                                            @obj.Gender.Name
                                        </td>
                                        <td>
                                            @obj.Occupation.Name
                                        </td>
                                        <td>
                                            <div class="btn-group w-75" role="group">
                                                <a class="btn btn-primary form-control mx-2" asp-page="upsert" asp-route-id="@obj.Id">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a class="btn btn-danger form-control mx-2" asp-page="delete" asp-route-id="@obj.Id">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }*@

                        </tbody>
                    </table>


                </div>
            }
            else
            {
                <div class="card-deck" style="width:100%;">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h4 class="card-text text-success">No record has been added yet!</h4>
                        </div>
                        <div class="card-body">
                            <p class="text-success">
                                Click on the button below to create new employee record &nbsp;
                                <i class="bi bi-arrow-90deg-down"></i>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-success form-control" asp-page="upsert">
                                <i class="bi bi-person-plus"></i>&nbsp;Create new record
                            </a>
                        </div>
                    </div>

                </div>
            }

        </div>


    </div>
</div>

@section Scripts
{
    <script src="~/js/employees.js"></script>
}