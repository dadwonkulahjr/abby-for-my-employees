@page
@model AbbyWeb.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete employee";
}

<div class="container shadow">
    <form method="post">
        <div class="row">
            <div class="border">
                <div class="col-9" style="padding:10px;">
                    <h5>
                        <i class="bi bi-trash"></i>&nbsp;Delete employee
                    </h5>
                </div>
                <hr />
                <h3 class="text-danger">
                    Are you sure you want to delete this employee? @Model.Employee.FullName
                </h3>
                <h5>
                    First name: @Model.Employee.FirstName
                </h5>
                <h5>
                    Last name: @Model.Employee.LastName
                </h5>
                <h5>
                    Salary: @Model.Employee.Salary.Value.ToString("c")
                </h5>
                <h5>
                    Address: @Model.Employee.Address
                </h5>
                <h5>
                    Telephone: @Model.Employee.Telephone
                </h5>
                <h5>
                    Dob: @Model.Employee.Dob.Value.ToShortDateString()
                </h5>

                <h5>
                    Gender: @Model.Employee.Gender.Name
                </h5>

                <h5>
                    Occupation: @Model.Employee.Occupation.Name
                </h5>
                <br />
                <div class="row">
                    <div class="col-3 col-sm-3 mb-3">
                        <button class="btn btn-danger form-control" type="submit">
                            <i class="bi bi-trash"></i>&nbsp;Delete
                        </button>
                    </div>
                    <div class="col-3 col-sm-3 mb-3">
                        <a asp-page="index" class="btn btn-success form-control">
                            <i class="bi bi-card-list"></i>&nbsp;Back to List
                        </a>
                    </div>


                </div>


            </div>

        </div>
    </form>
    
</div>
